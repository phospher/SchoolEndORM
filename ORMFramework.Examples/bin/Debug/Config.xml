<?xml version="1.0" encoding="utf-8"?>
<Configuration>
    <SessionFactory>
        <Database>SqlServer</Database>
        <ConnectionString>Data Source=192.168.248.128;User ID=sa;Password=;initial catalog=test</ConnectionString>
    </SessionFactory>
    <Mappings>
        <Map ClassName="ORMFramework.Examples.Student" TableName="Student" Key="Id"></Map>
    </Mappings>
    <log4net>
        <root>
            <level value="ALL" />
            <appender-ref ref="FileLogAppender" />
        </root>
        <logger name="DefaultLogger">
            <level value="ALL" />
        </logger>
        <appender name="FileLogAppender" type="log4net.Appender.FileAppender">
            <file value="log\log.txt" />
            <appendToFile value="true" />
            <Layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern" value="%p: %m%n" />
            </Layout>
        </appender>
    </log4net>
</Configuration>
